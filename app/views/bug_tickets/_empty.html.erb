<% if current_user.role != "user"%>
<h3>Open Tickets (non-user)</h3>

<table>

  <thead>
    <tr>
      <th>Bug Behavior</th>
      <th>Environment</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if bug_tickets.where(status: "Open").any? %>
  <tbody>
    <% bug_tickets.where(status: "Open").each do |bug_ticket| %>
      <tr>
        <td><%= bug_ticket.bug_behavior %></td>
        <td><%= bug_ticket.environment %></td>
        <td><%= bug_ticket.status %></td>
        <td><%= bug_ticket.priority %></td>
        <td><%= link_to 'Show', bug_ticket %></td>
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_bug_ticket_path(bug_ticket) %></td>
          <td><%= link_to 'Destroy', bug_ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  </tbody>
    <% end %>
  </table>
  <% else %>
    <p>No assigned tickets</p>
  <% end %>
<br>
<h3>Closed Tickets (non-user)</h3>
<table>
  <thead>
    <tr>
      <th>Bug Behavior</th>
      <th>Environment</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% if bug_tickets.where(status: "Closed").any? %>
  <tbody>
    <% bug_tickets.where(status: "Closed").each do |bug_ticket| %>
    <tr>
      <td><%= bug_ticket.bug_behavior %></td>
      <td><%= bug_ticket.environment %></td>
      <td><%= bug_ticket.status %></td>
      <td><%= bug_ticket.priority %></td>
      <td><%= link_to 'Show', bug_ticket %></td>
      <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_bug_ticket_path(bug_ticket) %></td>
        <td><%= link_to 'Destroy', bug_ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
  <% else %>
  <p>No closed tickets</p>
</table>
  <% end %>
<% end %>