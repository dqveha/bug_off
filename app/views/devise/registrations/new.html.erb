<main class="form-signin text-center">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<h2 class="h3 mb-3 fw-normal">Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.label :email, class: "form-control" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-floating">
    <%= f.label :password, class: "form-control" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-floating">
    <%= f.label :password_confirmation, class: "form-control" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
  </div>
<% end %>

</main>

